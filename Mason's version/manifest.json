
{
	"manifest_version": 2,

	"name": "Product Saver",
	"description": "Analyze the site listed based on click and save the price",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"browser_action":{
		"default_icon": "shirt.png",
		"default_title": "Bookmark Product"
	},

	"web_accessible_resources":[
		"icon3.png"
	],

	"permissions": [
		"tabs",
		"activeTab",
		"notifications"
	]
}